{
  "module_info": {
    "name": "Guest Radar Analyzer",
    "version": "1.0.0",
    "description": "Analiza popularności gości podcastów na podstawie danych YouTube",
    "created_date": "2025-07-29",
    "author": "Hook Boost Team"
  },
  "analysis_settings": {
    "min_podcast_duration": 1800,
    "min_video_duration": 600,
    "analysis_period_days": 7,
    "max_guests_per_video": 5
  },
  "guest_detection": {
    "name_patterns": [
      "gość:",
      "gość -",
      "gość:",
      "z",
      "z udziałem",
      "rozmowa z",
      "wywiad z",
      "spotkanie z",
      "gościem",
      "gośćmi"
    ],
    "exclude_patterns": [
      "reklama",
      "sponsor",
      "partner",
      "współpraca"
    ],
    "name_cleaning": {
      "remove_brackets": true,
      "remove_quotes": true,
      "normalize_whitespace": true
    }
  },
  "popularity_weights": {
    "views": 1.0,
    "likes": 2.0,
    "comments": 3.0,
    "shares": 5.0,
    "subscribers": 0.1
  },
  "output_settings": {
    "output_directory": "reports",
    "report_format": "json",
    "include_raw_data": false,
    "compress_reports": true
  },
  "data_sources": {
    "csv_directory": "/mnt/volume/reports",
    "categories_to_analyze": [
      "Podcast",
      "showbiz",
      "polityka"
    ],
    "exclude_categories": [
      "technologia",
      "sport"
    ]
  },
  "logging": {
    "level": "INFO",
    "file_logging": true,
    "log_file": "guest_radar.log"
  }
} 